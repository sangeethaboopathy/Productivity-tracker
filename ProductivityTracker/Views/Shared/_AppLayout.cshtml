@using ProductivityTracker_Helpers.Constants
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title | Timely</title>

    <!-- Bootstrap core CSS -->

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/fonts/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/docs.min.css" rel="stylesheet" />
    <link href="~/Content/css/shCoreDefault.css" rel="stylesheet" />
    <link href="~/Content/css/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/css/dataTables.material.min.css" rel="stylesheet" />

    <link href="~/Content/css/custom.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>

<!--[if lt IE 9]>
    <script src="../assets/js/ie8-responsive-file-warning.js"></script>
<![endif]-->
<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->

<body class="nav-md">
    <div class="body container" style="width: 100%;padding: 0;margin: 0;height: 100%;">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="" class="site_title">
                            <i class="fa fa-clock-o"></i>
                            <span class="brand_name">Timely</span>
                        </a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            @if (((string)Session[SessionConstants.Gender]) == "Male")
                            {
                                <img src="~/Content/images/male.png" alt="..." class="img-circle profile_img">
                            }
                            else
                            {
                                <img src="~/Content/images/female.png" alt="..." class="img-circle profile_img">
                            }
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>@Session[SessionConstants.User_Name]</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br>

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

                        <div class="menu_section">
                            <ul class="nav side-menu">

                                <li>
                                    <a href="/Dashboard/Dashboard"><i class="fa fa-tachometer"></i> Dashboard</a>
                                </li>

                                <li>
                                    <a href="/Projects/Projects"><i class="fa fa-gears"></i> Projects</a>
                                </li>

                                <li>
                                    <a href="/Accounts/Accounts"><i class="fa fa-paper-plane"></i> Accounts</a>
                                </li>

                                <li>
                                    <a href="/Report/Reports"><i class="fa fa-area-chart"></i> Reports</a>
                                </li>
                            </ul>
                        </div>

                    </div>
                    <!-- /sidebar menu -->

                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav row" style="margin: 0;background: rgb(178, 235, 242);">
                <div class="nav_menu row" style="margin: 0;">
                    <nav class="row" style="margin: 0;">
                        @*<div class="nav toggle">
                                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                            </div>*@

                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">

                                    @if (((string)Session[SessionConstants.Gender]) == "Male")
                                    {
                                        <img src="~/Content/images/male.png" alt="...">
                                    }
                                    else
                                    {
                                        <img src="~/Content/images/female.png" alt="...">
                                    }

                                    <span>@Session[SessionConstants.User_Name]</span>
                                    <span class="fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="javascript:;"> Profile</a></li>
                                    <li><a href=""><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>
                            <li></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="content_pane">
                    @RenderBody()
                </div>
            </div>
            <!-- /page content -->
        </div>
    </div>

    <!-- jQuery -->
    <script async="" src="https://www.google-analytics.com/analytics.js"></script>
    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/datatables.min.js"></script>
    <script src="~/Scripts/dataTables.material.min.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="~/Scripts/custom.min.js"></script>
    <script src="~/Scripts/application.js"></script>
</body>

</html>